/* 商品列表 */
@import "../../wxParse/wxParse.wxss";

page {
  height: 100%;
  overflow-y: scroll;
  background: #ececec;
}

.scrollView {
  width: 100%;
  padding-bottom: 104rpx;
  height: 100%;
  box-sizing: border-box;
}

.border_bottom::after {
  bottom: 0;
}

.tab {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  text-align: center;
  position: fixed;
  width: 100%;
  height: 104rpx;
  bottom: 0;
  left: 0;
  z-index: 100;
}

.tab::after {
  content: "";
  display: block;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  border-top: 1px solid #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.tab .right view {
  width: 100%;
  height: 100%;
  line-height: 104rpx;
}

.tab .right button {
  border-radius: 0;
  color: #fff;
}

.tab .right button::after, .tab .right button::before {
  border: 0;
  display: none;
}

.tab>view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.tab button::after {
  display: none;
}

.tab .left>view, button {
  margin: 0;
  padding: 0;
  background: #333;
  color: #999;
  border: none;
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 1.6;
}

.tab .left {
  flex: 2;
}

.tab .right {
  flex: 3;
}

.tab image {
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.title>view {
  margin-top: 0%;
  padding: 0% 3% 4% 2%;
  background: #fff;
}

.lineItem {
  border-bottom: 1px solid #ececec;
}

.lineItem .left {
  width: 4vw;
  height: 4vw;
  margin-right: 3vw;
}

.lineItem .left image {
  width: 100%;
  height: 100%;
}

.info_shop {
  margin-top: 2vw;
}

.info_shop .left {
  width: 10vw;
  height: 10vw;
  margin-right: 5vw;
}

.info_shop .left image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.mom_list {
  background: #fff;
  margin-top: 2vw;
  padding-top: 5vw;
}

.mom_list_item {
  padding: 2%;
}

.mom_list_item image {
  width: 11.125vw;
  height: 11.125vw;
  display: inline-block;
  margin-right: 1vw;
}

.mom_list_item image:nth-child(8n) {
  margin-right: 0;
}

.product_introduction {
  background: #fff;
  margin-top: 2vw;
  padding-top: 5vw;
}


.actionMask {
  /* position: absolute; */
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1001;
  box-sizing: border-box;
}
.shortcut {
  position: fixed;
  bottom: 25vw;
  right: 6vw;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
  color: #fff;
  width: 13vw;
  height: 13vw;
  /* padding: 2vw 0; *//* padding: 1.7vw 0 1.3vw; */
  text-align: center;
  z-index: 1002;
}

.shortcut view {
  line-height: 5vw;
}

.shortcut view:first-child {
  margin-top: 1.8vw;
}

.shortcut view:last-child {
  margin-bottom: 1.8vw;
}

.shortcutClose {
  width: 12vw;
  height: 12vw;
  line-height: 12vw;
  padding: 0;
  background: transparent;
}
.shortcutClose image{
  width: 12vw;
  height: 12vw;
}

.shortcutInfo {
  position: fixed;
  height: 24vw;
  right: 7vw;
  bottom: 37vw;
  color: #fff;
  z-index: 1002;
  overflow: hidden;
}

.shortcutContent {
  margin-top: 50vw;
  transition: 0.5s all;
}

.showShortcutContent {
  margin-top: 0;
}

.shortcutInfoList {
  height: 10vw;
  line-height: 10vw;
  margin-bottom: 2vw;
  z-index: 99999;
}

.shortcutInfoList button {
  padding: 0;
  display: inline-block;
  background: transparent;
  overflow: visible;
}

.shortcutInfoList button::after,::before {
  display: none;
}

.shortcutInfo text {
  line-height: 10vw;
  display: inline-block;
}

.shortcutInfo image {
  width: 10vw;
  height: 10vw;
  display: inline-block;
  vertical-align: middle;
  margin-left: 2vw;
}
